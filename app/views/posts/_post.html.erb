<div class="panel panel-default">
  <div class="panel-heading">
    <%= gravatar_tag post.user.email, size: 20 %> <%= post.user.username %> posted this about <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user and current_user == post.user %>
        <div class="pull-right"><%= link_to "Edit", edit_post_path(post) %> | <%= link_to "", post_path(post), method: :delete, class:"glyphicon glyphicon-trash"%></div>
    <% end %>
  </div>
  <div class="panel-body">
    <%= raw(post.content_html) %>
  </div>
</div>