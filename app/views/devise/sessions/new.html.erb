<div class="container">
  <div class="card card-container">
    <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
    <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    <p id="profile-name" class="profile-name-card"></p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"form-signin"}) do |f| %>
        <span id="reauth-email" class="reauth-email"></span>
        <%= f.input_field :email, required: true, autofocus: true, id:"inputEmail", class: "form-control", placeholder: "Email address" %>
        <%= f.input_field :password, required: true, id: "inputPassword", class: "form-control", placeholder: "Password" %>
      <div id="remember" class="checkbox">
        <%= f.input_field :remember_me, as: :boolean, value: "remember-me", inline_label: 'Remember me' if devise_mapping.rememberable? %>
      </div>
        <%= button_tag(type: 'submit', class: "btn btn-lg btn-primary btn-block btn-signin") do %>
            Sign in
        <%end%>
    <% end %><!-- /form -->
    <a href="#" class="forgot-password">
      <%= render "devise/shared/links" %>
    </a>
  </div><!-- /card-container -->
</div><!-- /container-->
